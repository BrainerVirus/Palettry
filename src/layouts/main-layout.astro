---
import Head from "@/features/ui/head.astro"

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<Head {title} {description} />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
